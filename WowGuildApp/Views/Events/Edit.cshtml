@model WowGuildApp.Models.Event

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="hostId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InviteTime" class="control-label"></label>
                <input type="time" min="12:00" max="23:59" asp-for="InviteTime" class="form-control">
                <span asp-validation-for="InviteTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input type="time" min="12:00" max="23:59" asp-for="StartTime" class="form-control">
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastSignup" class="control-label"></label>
                <input type="time" min="12:00" max="23:59" asp-for="LastSignup" class="form-control">
                <span asp-validation-for="LastSignup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Date" value="@Model.Date.ToString("yyyy-MM-ddThh:mm")" hidden />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

