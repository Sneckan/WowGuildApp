@model Post

@{
    ViewData["Title"] = "Home Page";
}


<div class="container">
    <img src="https://i.ytimg.com/vi/m7GIs5p1CQk/maxresdefault.jpg" width="100%" height="300"/>
    <h1>Latest news</h1>
    <div class="row">
        <div class="col-md-2">
            <p>Hello</p>
        </div>
        <div class="col-md-10" style="background-color: #1d2124;padding:10px;margin-top: 30px;">
            <div class="" style="color: white;padding: 10px;">
                <p class="" style="">@Model.Date.ToString("MMMM") @Model.Date.Day, @Model.Date.Year, @Model.Date.ToString("HH:mm:ss")</p>
                <h2 class="" style="color: white;text-align:center">@Model.Title</h2>
                <p class=""></p>
            </div>
            <div class="post-content">
                @Html.Raw(Model.Content)
            </div>
        </div>
    </div>
</div>