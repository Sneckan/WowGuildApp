@model WowGuildApp.Models.HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="row">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="http://zamarkand.com/katla/wp-content/uploads/2016/02/3-Kormrok.png" alt="First slide" height="400">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="row mt-5">
        <div class="guild-info col-md-2">
            <h3>Guild info</h3>
            <hr />
            <a href="https://discordapp.com/invite/Skyhold"><img alt="Discord" src="https://discordapp.com/assets/fc0b01fe10a0b8c602fb0106d8189d9b.png" width="100%" height="80" /></a>
            <a href="https://www.wowprogress.com/guild/eu/outland/Allurium"><img alt="WoW Guild Rankings" src="https://wowprogress.com/guild_img/1295508/out/type.site" width="100%" /></a>
            <a href="https://www.warcraftlogs.com/guild/eu/turalyon/dawn%20of%20the%20undead"><img alt="Warcraftlogs" title="Warcraftlogs" data-toggle="tooltip" src="https://dmszsuqyoe6y6.cloudfront.net/img/common/warcraft-logo.png" width="100" height="100" /></a>    
            <a href="http://eu.battle.net/wow/en/guild/turalyon/Dawn_of_the_Undead/"><img alt="Armory" title="Armory" data-toggle="tooltip" src="https://vignette.wikia.nocookie.net/wyrmrest/images/e/e7/Official_wow_icon.png/revision/latest?cb=20170426091511" width="100" height="100" /></a>
        </div>
        <div class="col-md" style="background-color: #1d2124;padding:10px;border-radius: 5px;">
            @if (Model.LatestPost != null)
            {                 
            <div>
                @if (Model.Character != null)
                {
                    <img src="http://render-eu.worldofwarcraft.com/character/@Model.Character.Thumbnail" style="margin-right:10px;border-radius: 50%;display: inline-block;" />
                }
                else
                {
                    <img src="https://eu.battle.net/wow/static/images/2d/avatar/9-0.jpg" style="margin-right:10px;border-radius: 50%;display: inline-block;" />
                }
                <div style="display: inline-block;vertical-align: top;">
                    <a href="@Url.Action("Details", "Forum", new { id = Model.LatestPost.Id})"><h2 style="margin: 0;">@Model.LatestPost.Title</h2></a>
                    <p style="font-size: 12px;margin:0">Posted by @Model.LatestPost.User.UserName, @Model.LatestPost.Date.ToString("MMMM") @Model.LatestPost.Date.Day, @Model.LatestPost.Date.Year, @Model.LatestPost.Date.ToString("HH:mm:ss")</p>
                </div>
            </div>

            <div class="post-content">
                @Html.Raw(Model.LatestPost.Content)
            </div> 
            }
        </div>
    </div>
</div>